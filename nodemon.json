{
  "watch": [
    "index.js",
    "code/**/*.js",
    ".env"
  ],
  "ignore": [
    "sessions/**/*",
    "logs/**/*",
    "node_modules/**/*",
    ".git/**/*",
    "**/*.json~",
    "device-status.json",
    "session-state.json"
  ],
  "delay": 2000,
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json",
  "exec": "node index.js",
  "events": {
    "restart": "echo 'ðŸ”„ Bot restarting...'",
    "crash": "echo 'ðŸ’¥ Bot crashed!'"
  },
  "quiet": false,
  "verbose": false
}
