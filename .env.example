# WhatsApp Bot Linda - Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# BOT CONFIGURATION
# ==========================================
NODE_ENV=development
LOG_LEVEL=debug
DEBUG_MODE=true

# ==========================================
# WHATSAPP BOT SETTINGS
# ==========================================
# Bot numbers (comma-separated or JSON format)
BOT_NUMBERS=971501234567,971509876543
BOT_ENABLE_PAIRING_CODE=true
BOT_SESSION_STORE_PATH=./sessions

# ==========================================
# GOOGLE SHEETS CONFIGURATION
# ==========================================
GOOGLE_SHEETS_KEY_PATH=./code/GoogleAPI/keys.json
GOOGLE_SHEET_ID=your_spreadsheet_id_here

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3000
HOST=localhost

# ==========================================
# LOGGING
# ==========================================
LOG_FILE_PATH=./logs/bot.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# ==========================================
# RATE LIMITING
# ==========================================
MESSAGE_DELAY_MS=1000
BATCH_DELAY_MS=5000

# ==========================================
# CONTACT VALIDATION
# ==========================================
COUNTRY_CODE_VALIDATION=true
PRIMARY_COUNTRY_CODE=971

# ==========================================
# CAMPAIGN SETTINGS
# ==========================================
CAMPAIGN_MODE=batch
CAMPAIGN_BATCH_SIZE=50
