# ==========================================
# BOT CONFIGURATION
# ==========================================
NODE_ENV=development
LOG_LEVEL=debug
DEBUG_MODE=true

# ==========================================
# WHATSAPP BOT SETTINGS
# ==========================================
# Master bot number (Main instance)
# Format: 971505760056 (without + or spaces)
BOT_MASTER_NUMBER=your_master_whatsapp_number_here
BOT_ENABLE_PAIRING_CODE=true
BOT_SESSION_STORE_PATH=./sessions

# ==========================================
# PUPPETEER/CHROME CONFIGURATION
# ==========================================
PUPPETEER_EXECUTABLE_PATH=
CHROME_BIN=
PUPPETEER_SKIP_DOWNLOAD=true
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_HEADLESS=true

# ==========================================
# GOOGLE API CONFIGURATION - MULTI-ACCOUNT
# ====================================================================
# üîê PHASE 22: SECURE CREDENTIAL MANAGEMENT VIA .ENV (BASE64)
#
# ‚ö†Ô∏è CRITICAL: All Google credentials are now stored as base64-encoded
# JSON strings in .env. This ensures NO SECRETS ARE EVER COMMITTED TO GIT.
#
# MIGRATION GUIDE (From keys.json to .env):
# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
# 1. Find your service account JSON file (e.g., keys.json, keys-goraha.json)
#
# 2. Encode it to base64:
#    
#    Linux/Mac:
#      cat keys.json | base64 | tr -d '\n'
#    
#    Windows PowerShell:
#      [Convert]::ToBase64String([System.IO.File]::ReadAllBytes("keys.json"))
#    
#    Windows (simple):
#      certutil -encode keys.json keys.b64 && type keys.b64
#
# 3. Copy the entire base64 output (without line breaks)
#    Paste it as the value for the _BASE64 variable below
#
# 4. Clean up old JSON files from git:
#    git rm --cached code/GoogleAPI/keys.json
#    git rm --cached code/GoogleAPI/keys-goraha.json
#    git commit -m "Remove legacy credential files from git"
#
# ====================================================================

# Account 1: PowerAgent (Service Account for Google Sheets/Drive)
# üîê Base64-encoded service account JSON (REQUIRED)
# Contains: type, project_id, private_key, client_email, etc.
GOOGLE_ACCOUNT_POWERAGENT_KEYS_BASE64=

# Account 2: GorahaBot (Service Account for Contacts/Verification)
# üîê Base64-encoded service account JSON (REQUIRED)
# Contains: type, project_id, private_key, client_email, etc.
GOOGLE_ACCOUNT_GORAHA_KEYS_BASE64=

# Account 3: serviceman11 (Optional - for Akoya sheet automation)
# üîê Base64-encoded service account JSON (OPTIONAL)
# Used for: Automated Akoya sheet read/write operations
# GOOGLE_ACCOUNT_SERVICEMAN11_KEYS_BASE64=

# Future Custom Accounts: Extensible without code changes
# Just add the base64 variable in the pattern:
#   GOOGLE_ACCOUNT_<CUSTOM_NAME>_KEYS_BASE64=<base64_string>
# Examples (uncomment and fill when ready):
# GOOGLE_ACCOUNT_GMAIL_SERVICE_KEYS_BASE64=
# GOOGLE_ACCOUNT_ANALYTICS_KEYS_BASE64=

# Contact Sync Settings
GOOGLE_CONTACTS_SYNC_INTERVAL=3600000
GOOGLE_CONTACTS_PHONE_PREFIX=971
GOOGLE_CONTACTS_DEDUPLICATE=true
GOOGLE_CONTACTS_AUTO_SYNC=false

# Legacy paths (DEPRECATED - DO NOT USE)
# These are kept ONLY for backward compatibility
# GoogleServiceAccountManager prefers base64 variables above
# GOOGLE_ACCOUNT_POWERAGENT_KEYS=./code/GoogleAPI/keys.json
# GOOGLE_ACCOUNT_GORAHA_KEYS=./code/GoogleAPI/keys-goraha.json
# GOOGLE_SHEETS_KEY_PATH=./code/GoogleAPI/keys.json
# GOOGLE_CREDENTIALS_PATH=./code/Integration/Google/keys.json

# Sheet configuration
GOOGLE_SHEET_ID=your_spreadsheet_id_here
LOG_FILE=./logs/google-api.log

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# MongoDB Atlas Connection String Format:
# mongodb+srv://username:password@host/database?retryWrites=true&w=majority
# Get from MongoDB Atlas > Connect > Connection String
MONGODB_URI=mongodb+srv://username:password@yourhost.mongodb.net/databasename?retryWrites=true&w=majority
DB_PASSWORD=your_database_password_here
DATABASE_URL=mongodb+srv://username:password@yourhost.mongodb.net/databasename?retryWrites=true&w=majority

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3000
HOST=localhost

# ==========================================
# PRODUCTION SETTINGS (February 2026)
# ==========================================
NODE_ENV=production
LOG_LEVEL=info
DEBUG_MODE=false

# SESSION PERSISTENCE
SESSION_KEEP_ALIVE=true
SESSION_TIMEOUT_MS=0
HEARTBEAT_INTERVAL=120000
HEARTBEAT_METHOD=typing_indicator

# RECONNECTION SETTINGS
RECONNECT_ATTEMPT_LIMIT=999
RESTART_DELAY=3000
EXIT_DELAY=60000
MAX_INIT_ATTEMPTS=3

# ACCOUNT MANAGEMENT
MAX_SIMULTANEOUS_ACCOUNTS=10
ACCOUNT_SEQUENTIAL_DELAY=5000
ACCOUNT_INIT_TIMEOUT=120000

# HEALTH MONITORING
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=30000
ENABLE_HEALTH_MONITORING=true

# DATABASE CONTEXT
AKOYA_SHEET_ID=your_akoya_sheet_id
AKOYA_ORGANIZED_SHEET_ID=your_organized_sheet_id

# ==========================================
# CAMPAIGN SETTINGS
# ==========================================
CAMPAIGN_MODE=batch
CAMPAIGN_BATCH_SIZE=50
